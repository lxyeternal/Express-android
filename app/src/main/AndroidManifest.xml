<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sunofbeaches.mainlooper">

    <!--允许联网 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!--获取GSM（2g）、WCDMA（联通3g）等网络状态的信息  -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!--获取wifi网络状态的信息 -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <!--保持CPU 运转，屏幕和键盘灯有可能是关闭的,用于文件上传和下载 -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <!--获取sd卡写的权限，用于文件上传和下载-->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!--允许读取手机状态 用于创建BmobInstallation-->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <!--获取手机录音机使用权限，听写、识别、语义理解需要用到此权限 -->
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <!--允许程序改变网络连接状态 -->
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
    <!--读取联系人权限，上传联系人需要用到此权限 -->
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!--允许读取手机状态 用于创建BmobInstallation-->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <!--短信权限-->
    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <uses-permission android:name="android.permission.SEND_SMS" />
    <!--窗口权限-->
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />

    <uses-permission android:name="android.permission.INTERNET"/>


    <application
        android:allowBackup="true"
        android:icon="@drawable/express"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.sunofbeaches.mainlooper.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name="com.imooc.searchResult.SearchActivity">

        </activity>

        <!--主界面-->
        <activity android:name="com.sunofbeaches.mainlooper.MainActivity">

        </activity>
        <activity android:name="com.yyw.receiveResult.ReceiveActivity">

        </activity>

        <!--引导页面-->
        <activity android:name="com.sunofbeaches.mainlooper.GuideActivity"/>

        <!--注册页面-->
        <activity android:name="com.sunofbeaches.mainlooper.LoginActivity"/>

        <!--地址添加页面-->
        <activity android:name="com.Tools.AddAddressActivity"/>



        <!--忘记密码-->
        <activity android:name="com.sunofbeaches.mainlooper.ForgetPasswordActivity"/>

        <!--禁忌物品查询-->

        <activity android:name=".Prohibit_page">

        </activity>

        <!--寄件页面-->
        <activity android:name="com.sunofbeaches.List.Sendpackage">

        </activity>


        <activity android:name="com.sunofbeaches.mainlooper.RegisteredActivity"/>

        <activity android:name=".QRcode"/>
        <activity android:name="com.imooc.searchResult.ScanActivity">

        </activity>
        <activity android:name="com.sunofbeaches.mainlooper.CenterActivity">

        </activity>
        <activity android:name=".Receive" />
    </application>

</manifest>